<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="game" class="com.devfriendly.game.Game"/>

    <bean id="gameStateManager" class="com.devfriendly.system.impl.GameStateManagerImpl">
        <constructor-arg>
            <map>
                <entry key="WELCOME_SCREEN" value-ref="simpleHomeScreen"/>
            </map>
        </constructor-arg>
        <property name="gameState" value="WELCOME_SCREEN"/>
    </bean>

    <bean id="simpleHomeScreen" class="com.devfriendly.game.states.homescreen.SimpleHomeScreenState">
        <constructor-arg name="gameStateName" value="WELCOME_SCREEN"/>
        <constructor-arg name="renderableList" >
            <list>
                <ref bean="simpleHomeScreenRenderer"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="simpleHomeScreenRenderer" class="com.devfriendly.game.states.homescreen.renderer.SimpleHomeScreenRenderer"/>
</beans>